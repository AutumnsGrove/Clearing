# Cloudflare D1 Database ID
# Get this from your Cloudflare dashboard after creating the D1 database
CLOUDFLARE_D1_DATABASE_ID=

# Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID=

# Cloudflare API Token
# Create a token with D1 read/write permissions
CLOUDFLARE_API_TOKEN=

# GroveAuth Integration (for admin interface)
# Base URL for GroveAuth API
GROVEAUTH_API_URL=https://auth.grove.place
# API key for GroveAuth (admin access)
GROVEAUTH_API_KEY=

# Environment
NODE_ENV=development

# Frontend Configuration
PUBLIC_SITE_URL=https://status.grove.place
PUBLIC_API_URL=https://api.status.grove.place

# RSS Feed Configuration
PUBLIC_RSS_FEED_URL=https://status.grove.place/feed.xml